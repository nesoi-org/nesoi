{
  "compilerOptions": {
    "target": "ES2022",
    "module": "commonjs",
    "lib": [
      "ES2022"
    ],
    "declaration": true,
    "removeComments": false,
    "outDir": "./build",
    "strict": true,
    "types": [
      "node",
      "jest"
    ],
    "noEmitOnError": true,
    "resolveJsonModule": true,
    "skipLibCheck": false,
    "incremental": true,
    "moduleResolution": "node",
    "strictNullChecks": true, 
    "allowSyntheticDefaultImports": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "esModuleInterop": true,
    "importsNotUsedAsValues": "remove",
    "baseUrl": ".",
    "paths": {
      "~/*": ["./src/*"],
      "nesoi/lib/*": ["./src/*"],
      "nesoi/tools/*": ["./tools/*"],
    },
    "plugins": [
      {
        "transform": "typescript-transform-paths",
      },
      {
        "transform": "typescript-transform-paths",
        "afterDeclarations": true,
      }
    ]
  },
  "include": [
    "src",
    "migrations",
    "tools",
    "test",
    "test-d",
    "examples/3_sandbox/.nesoi/.types",
    "index.d.ts"
  ],
  "exclude": [
    "node_modules",
    "tools/meta"
  ]
}
