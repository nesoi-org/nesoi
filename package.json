    "@typescript-eslint/parser": "^8.6.0",
    "better-docs": "^2.7.3",
    "eslint": "^8",
    "eslint-plugin-import": "^2.30.0",
    "eslint-plugin-unused-imports": "^4.1.4",
    "globals": "^15.9.0",
    "jest": "29.7.0",
    "jsdoc": "^4.0.4",
    "module-alias": "2.2.3",
    "ts-jest": "29.1.2",
    "ts-patch": "3.3.0",
    "tsd": "^0.31.2",
    "typescript": "5.8.2",
    "typescript-eslint": "^8.6.0",
    "typescript-transform-paths": "3.5.3"
  },
  "_moduleAliases": {
    "~": "build/src",
    "nesoi/tools": "build/tools"
