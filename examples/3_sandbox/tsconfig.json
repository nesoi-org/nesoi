{
  "compilerOptions": {
    "target": "ES2022",
    "module": "commonjs",
    "lib": [
      "ES2022"
    ],
    "declaration": true,
    "removeComments": false,
    "outDir": "./build",
    "strict": true,
    "noEmitOnError": true,
    "resolveJsonModule": true,
    "skipLibCheck": false,
    "incremental": true,
    "moduleResolution": "node",
    "strictNullChecks": true, 
    "allowSyntheticDefaultImports": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "esModuleInterop": true,
    "importsNotUsedAsValues": "remove",
    "baseUrl": ".",
    "paths": {
      "~/*": ["node_modules/nesoi/src/*"],
      "nesoi/lib/*": ["node_modules/nesoi/src/*"]
    },
    "plugins": [
      {
        "transform": "typescript-transform-paths"
      },
      {
        "transform": "typescript-transform-paths",
        "afterDeclarations": true
      }
    ]
  },
  "files": [
    "node_modules/nesoi/index.d.ts"
  ],
  "include": [
    "apps",
    "bin",
    "lib",
    "modules",
    ".nesoi/.types/**/*"
  ]
}
